<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/img_archivo"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_home"/>

    <TextView android:id="@+id/text_nombre_archivo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre_archivo"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_archivo"/>

    <TextView android:id="@+id/text_fecha_archivo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha_archivo"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_archivo"
        android:layout_below="@+id/text_nombre_archivo"/>

    <TextView android:id="@+id/text_usuario_archivo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario_archivo"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_archivo"
        android:layout_below="@+id/text_fecha_archivo"/>

    <TextView android:id="@+id/text_url_archivo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url_archivo"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_archivo"
        android:layout_below="@+id/text_usuario_archivo"/>


</RelativeLayout>